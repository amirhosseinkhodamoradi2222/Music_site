<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row">
           
            <h3 class="mt-3 mb-3 ml-1">  اضافه کردن خبر جدید </h3>
            <div class="col-12 col-lg-8">
             
                <form action="/admin/addnews" method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="exampleFormControlInput1" class="">عنوان</label>
                    <input type="text" class="form-control" name="title" id="exampleFormControlInput1">
                  </div>
                  <div class="mb-3">
                    <label for="file" class="">عکس برای خبر</label>
                    <input class="form-control" type="file" name="myfile" id="file">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="exampleFormControlInput1" class="">متن خبر</label>
                    <textarea class="form-control" name="text" id="exampleFormControlTextarea1" rows="5"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="">تاریخ خبر</label>
                    <input type="text" class="form-control" name="date" id="exampleFormControlInput1">
                </div>
                <div class="mb-3 mb-8">
                    <button type="submit" class="btn btn-success w-25">ثبت</button>
                  <button type="reset" class="btn btn-danger w-25">بازنشانی</button>
                </div>
                </form> 
            </div>

            <div class="col-12 col-lg-2"></div>
            <div class="col-12 col-lg-2"></div>
        </div>
    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 