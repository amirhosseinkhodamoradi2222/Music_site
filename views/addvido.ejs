<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row">
               
            <h3 class="mt-3 mb-3 ml-1">  اضافه کردن ویدئو موزیک جدید </h3>
            <div class="col-12 col-lg-8">
                <form action="/admin/addvido" method="POST" enctype="multipart/form-data">
                    <div class="mb-3 mt-3">
                        <label for="exampleFormControlInput1" class=""> عنوان</label>
                        <input type="text" class="form-control" required name="title" id="exampleFormControlInput1">
                      </div>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="">ویدئو موزیک</label>
                        <input class="form-control" name="vido" type="file" id="formFileMultiple" required multiple>
                      </div>
                      <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="">متن برای ویدئو موزیک</label>
                        <textarea class="form-control" name="text" id="exampleFormControlTextarea1" required rows="5"></textarea>
                    </div>
                      <div class="mb-3  w-50">
                        <label for="exampleFormControlTextarea1" class="">وضعیت نمایش</label>
                        <select class="form-select" aria-label="Default select example" required name="condition">
                            <option selected value="1">بله</option>
                            <option value="0">خیر</option>
                          </select>
                      </div>
                <div class="mb-3 mb-8">
                    <button type="submit" class="btn btn-success w-25">ثبت</button>
                    <button type="reset" class="btn btn-danger w-25">بازنشانی</button>
                </div>
                </form> 
            </div>
            <div class="col-12 col-lg-2"></div>
            <div class="col-12 col-lg-2"></div>
        </div>
    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 