<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  
              <h3 class="mt-3 mb-3 ml-2"> لیست پیام ها </h3>
              <div class="row">
                <div class="col-12 col-lg-atuo">
                  <div class="table-responsive mt-2">
                    <table class="table table-striped table-sm border">
                      <thead>
                        <tr>
                          <th class="text-center">  نام</th>
                          <th class="text-center">ایمیل</th>           
                          <th class="text-center">متن پیام</th>
                          <th class="text-center">حذف</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(result){ %> 
                          <% for(let i of result){ %> 
                        <tr>
                          <td class="text-center"><%- i.name %> </td>
                          <td class="text-center"><%- i.email %></td>
                          <td class="text-center"><%- i.text %></td>
                          <td><a href="/admin/deletecantact/<%- i.id  %> "> <button type="button" class="btn btn-danger w-100 pt-1 pb-1">حذف</button></a></td>
                        </tr>
                        <% }} %> 
                      </tbody>
                    </table>
                  </div>
               
                </div>
                </div>
              

                <h3 class="mt-3 mb-3 ml-2"> لیست اهنگ های ارسالی </h3>
                <div class="row">
                  <div class="col-12 col-lg-atuo">
                    <div class="table-responsive mt-2">
                      <table class="table table-striped table-sm border">
                        <thead>
                          <tr>
                            <th class="text-center">  نام</th>
                            <th class="text-center">فامیلی</th>           
                            <th class="text-center">ایمیل</th>
                            <th class="text-center">اهنگ</th>
                            <th class="text-center">حذف</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(send){ %> 
                            <% for(let l of send){ %> 
                          <tr>
                            <td class="text-center"><%- l.name %> </td>
                            <td class="text-center"><%- l.family %></td>
                            <td class="text-center"><%- l.email %></td>
                            <td class="text-center"><audio class="embed-responsive-item m-auto" controls="" preload="none"> <source src="../upload/<%- l.src_music %>   " type="audio/mp3"></audio></td>
                            <td><a href="/admin/deletesend<%- l.id  %>/<%- l.src_music %>  "> <button type="button" class="btn btn-danger w-100 pt-1 pb-1">حذف</button></a></td>
                          </tr>
                          <% }} %> 
                        </tbody>
                      </table>
                    </div>
                 
                  </div>
                  </div>


                <div class="col-12 col-lg-3"></div>
            </div>
              

    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 