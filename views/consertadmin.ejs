<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row mt-3 mb-3">
   
            <div class="col-8">
             <div class="card m-0 border border-success">
               <div class="card-body">
                 <h5 class="card-title mb-3">اضافه کردن کنسرت</h5>
                <a href="/admin/addconsert"> <button type="button" class="btn btn-success w-25">+ اضافه کردن</button></a>
               </div>
             </div>
         
            </div>
            <div class="col-4">
           
            </div>
           </div>

           <h3 class="mt-3 mb-3 ml-2"> لیست کنسرت ها </h3>
           <div class="table-responsive mt-2">
             <table class="table table-striped table-sm border">
               <thead>
                 <tr>
                   <th class="text-center">تیتر  </th>
                   <th class="text-center">متن</th>
                   <th class="text-center">تاریخ </th>
                   <th class="text-center">لینک خرید بلیط</th>
                   <th class="text-center">ساعت برگزاری</th>
                   <th class="text-center">ویرایش</th>
                   <th class="text-center">حذف</th>
                 </tr>
               </thead>
               <tbody>
                 <% for(let i of result){ %> 
                 <tr>
                   <td class="text-center"><%- i.title  %> </td>
                   <td class="text-center"><%-  i.text %> </td>
                   <td class="text-center"><%-  i.history %></td>
                   <td class="text-center"><%- i.	link %> </td>
                   <td class="text-center"><%- i.date %> </td>
                   <td><a href="/admin/edtconsert<%- i.id %> "> <button type="button" class="btn btn-info w-100 pt-1 pb-1">ویرایش</button></a></td>
                   <td><a href="/admin/deleteconsert<%- i.id %>/<%- i.img %> "> <button type="button" class="btn btn-danger w-100 pt-1 pb-1">حذف</button></a></td>
                 </tr>
                 <% } %> 
                 <tr>
               
               </tbody>
             </table>
           </div>
        
         </div>

    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 