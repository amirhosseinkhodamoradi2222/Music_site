<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row">
           
            <h3 class="mt-3 mb-3 ml-1">  ویرایش کردن اهنگ  </h3>
            <div class="col-12 col-lg-8">

                <form action="/admin/edtmusic<%- id %>/<%- img %>/<%- music %>  " method="POST" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="exampleFormControlInput1" class="">نام اهنگ</label>
                    <input type="text" name="name" value="<%- name %> " class="form-control border-dark" id="exampleFormControlInput1">
                  </div>
                  <div class="mb-3 w-50">
                    <label for="exampleFormControlTextarea1" class="">نام خواننده</label>
                    <select class="form-select border-dark" name="singer" aria-label="Default select example">
                      <% for(let i of sin) {%> 
                        <option value=<%= i.id %>>  <%= i.name %> </option>
                        <% } %> 
                      </select>
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="exampleFormControlInput1" class="">تاریخ انتشار اهنگ</label>
                    <input type="text" name="date" value="<%- history  %> " class="form-control border-dark" id="exampleFormControlInput1">
                  </div>
                  <div class="mb-3 mt-3">
                    <label for="exampleFormControlInput1" class="">عنوان اهنگ</label>
                    <input type="text" name="title" value="<%- title %>" class="form-control border-dark" id="exampleFormControlInput1">
                  </div>
                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="">متن اهنگ</label>
                    <textarea class="form-control border-dark" name="text" id="exampleFormControlTextarea1" rows="5"><%- text %> </textarea>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="">عکس برای اهنگ</label>
                    <input class="form-control border-dark" name="imge" type="file" id="formFileMultiple" >
                  </div>
                  <div class="mb-3">
                    <label for="formFileMultiple" class=""> فایل اهنگ</label>
                    <input class="form-control border-dark" name="music" type="file" id="formFileMultiple" >
                  </div>
                  <div class="mb-3 w-50">
                    <label for="exampleFormControlTextarea1" class="">دسته بندی اهنگ</label>
                    <select class="form-select border-dark" name="catgory" aria-label="Default select example">
                      <% for(let i of cat) {%> 
                        <option value=<%= i.id %> ><%= i.name %></option>
                        <% } %> 
                      </select>
                  </div>
                  <div class="mb-3 w-50">
                    <label for="exampleFormControlTextarea1" class="border-dark">اهنگ جدید</label>
                    <select class="form-select border-dark" name="new" aria-label="Default select example">
                      <% if( newsss == 1 ){%>
                        <option value="1" selected>بله</option>
                        <option value="0">خیر</option>
                        <% } else {%>
                          <option value="0" selected>خیر</option>
                          <option value="1" >بله</option>
                          <% } %> 
                      </select>
                  </div>
                  <div class="mb-3 w-50">
                    <label for="exampleFormControlTextarea1" class="border-dark">اهنگ محبوب</label>
                    <select class="form-select border-dark" name="popular" aria-label="Default select example">
                      <% if(popular == 1 ){%>
                        <option value="1" selected>بله</option>
                        <option value="0">خیر</option>
                        <% } else {%>
                          <option value="0" selected>خیر</option>
                          <option value="1" >بله</option>
                          <% } %> 
                      </select>
                  </div>
                  <div class="mb-3  w-50">
                    <label for="exampleFormControlTextarea1" class="border-dark">وضعیت نمایش</label>
                    <select class="form-select border-dark" name="condition" aria-label="Default select example">
                      <% if(condition == 1 ){%>
                        <option value="1" selected>بله</option>
                        <option value="0">خیر</option>
                        <% } else {%>
                          <option value="0" selected>خیر</option>
                          <option value="1" >بله</option>
                          <% } %> 
                      </select>
                  </div>
                  <div class="mb-3 mb-8">
                    <button type="submit" class="btn btn-success w-25">ویرایش</button>
                  <button type="reset" class="btn btn-danger w-25">بازنشانی</button>
                </div>
                </form> 
            </div>
            <div class="col-12 col-lg-2"></div>
            <div class="col-12 col-lg-2"></div>
        </div>
    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 