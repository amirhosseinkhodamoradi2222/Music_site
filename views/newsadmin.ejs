<%- include('./header/headeradmin.ejs')  %> 
 
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <% if(mas_err == "خبر با موفقیت درج و انتشار شد") {%>
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
          <%- mas_err %> 
           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
         </div> 
        <% } else if(mas_err == "فقط فایل هایی با پسوند JPEG ارسال شود"){ %>
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <%- mas_err %> 
             <button type="button" class="close" data-dismiss="alert" aria-label="Close">
               <span aria-hidden="true">&times;</span>
             </button>
           </div> 
          <% } %>   
        <div class="row mt-3 mb-3">
            <div class="col-8">
             <div class="card m-0 border border-success">
               <div class="card-body">
                 <h5 class="card-title mb-3">اضافه کردن خبر</h5>
                <a href="/admin/addnews"> <button type="button" class="btn btn-success w-25">+ اضافه کردن</button></a>
               </div>
             </div>
         
            </div>
            <div class="col-4">
             
            </div>
           </div>
              <h3 class="mt-3 mb-3 ml-2"> لیست خبرها </h3>
               <div class="table-responsive mt-2">
                 <table class="table table-striped table-sm border">
                   <thead>
                     <tr>
                       <th class="text-center">  تیتر</th>
                       <th class="text-center">متن</th>           
                       <th class="text-center">تاریخ انتشار</th>
                       <th class="text-center">ویرایش</th>
                       <th class="text-center">حذف</th>
                     </tr>
                   </thead>
                   <tbody>
                     <% for(let i of result){ %> 
                     <tr>
                       <td class="text-center"><%- i.title %> </td>
                       <td class="text-justify "><%- i.text %> </td>
                       <td class="text-center"><%- i.date %> </td>
                       <td><a href="/admin/edtnews<%- i.id %>"> <button type="button" class="btn btn-info w-100 pt-1 pb-1">ویرایش</button></a></td>
                       <td><a href="/admin/deletenews/<%- i.id %>"> <button type="button" class="btn btn-danger w-100 pt-1 pb-1">حذف</button></a></td>
                     </tr>
                     <% } %> 
                     <tr>
                   
                   </tbody>
                 </table>
               </div>
            
             </div>


    </main>
<%- include('./footer/footeradmin.ejs')  %> 