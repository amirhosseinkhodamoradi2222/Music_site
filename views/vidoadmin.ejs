<%- include('./header/headeradmin.ejs')  %>  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row mt-3 mb-3">
   
            <div class="col-8">
             <div class="card m-0 border border-success">
               <div class="card-body">
                 <h5 class="card-title mb-3">اضافه کردن ویدئو موزیک</h5>
                 <a href="/admin/addvido"><button type="button" class="btn btn-success pl-5 pr-5">+ اضافه کردن</button></a>
               </div>
             </div>
         
            </div>
           
        </div>

              <h3 class="mt-4 mb-3 ml-3">   لیست  ویدئو موزیک های  سایت</h3>
             
               <div class="table-responsive mt-2 ">
                   <div class="row m-0" >
                    <% for(let i of result ){ %> 
                       <div class="col-12 col-md-6 col-lg-4  mt-2 mb-2" >
                          <div class="border border-dark rounded shadow "  > 
                           <div class="card w-100 h-100">
                            <video class="video-fluid z-depth-1"  loop controls >
                                <source src="../video/<%- i.src %> " type="video/mp4" />
                              </video>
                        </div>
                            <div>
                              <h6 class="mt-2 mb-1 font-weight-bold ml-3 text-justify"><%- i.title %> </h6><br>
                              <h6 class="mt-1 mb-1 text-justify ml-2 mr-2"><%- i.text %> </h6><br>
                              <p class="mt-1 mb-1 text-justify ml-2"><% if(i.condition == 1){ %><button type="button" class=" btn btn-success "> منتشر </button>  <% } else if(i.condition == 0){%> <button type="button" class=" btn btn-secondary  "> منتشر نشده  </button><% } %></p>
                              <a href="/admin/edtvido<%- i.id %> "> <button type="button" class="rounded-0 btn btn-info w-100 pt-1 pb-1">ویرایش</button></a>
                              <a href="/admin/deletevido<%- i.id %>/<%- i.src %> "> <button type="button" class="rounded-0 btn btn-danger w-100 pt-1 pb-1">حذف</button></a>
                            </div>
                          </div>
                        </div>  
                        <% } %>  
                    </div>
                </div>
           
            
    </main>
    
    
<%- include('./footer/footeradmin.ejs')  %> 